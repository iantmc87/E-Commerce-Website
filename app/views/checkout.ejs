<!DOCTYPE html>
<html>
<head>
  <% include ./parts/head.ejs %>
</head>
<body>
  <% include ./parts/header.ejs %>

  <main>
    <div class="container-fluid">
      <div class="row checkout-box">
        <div class="col-sm-1"></div>
        <div class="col-sm-5 address-box">
          <h3>Delivery Address</h3><br>
          <form id="ad-form" class="address-form" action="/checkout/proceed" method="post">
            <div class="input-block">
              <p>Telephone No.:</p>
              <input class="input-box" type="number" name="telephone" value="<%= user.telephone %>" required/>
            </div>
            <div class="input-block">
              <p>First Line of Address:</p>
              <input class="input-box" type="text" name="firstLineAddress" value="<%= user.firstLineAddress %>" required/>
            </div>
            <div class="input-block">
              <p>Town:</p>
              <input class="input-box" type="text" name="town" value="<%= user.town %>" required/>
            </div>
            <div class="input-block">
              <p>County:</p>
              <input class="input-box" type="text" name="county" value="<%= user.county %>" required/>
            </div>
            <div class="input-block">
              <p>Postcode:</p>
              <input class="input-box" type="text" name="postCode" value="<%= user.postCode %>" required/>
            </div><br>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-4">
          <br><br>
          <div class="tProd">
          <h3 class="tProd">Total Products :  <%= cart.totalQuantity %></h3>
          <h3 class="tProd">Total Amount : Â£<%= cart.totalPrice %></h3>
          <p class="tProd">Payment Options : Debit/Credit Card</br>
          </p><br>
            </div>
          <button class="btn btn-danger btn-block" type="submit" onclick="document.getElementById('ad-form').submit();">Proceed</button><br>
          </form>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>
  </main>

  <% include ./parts/footer.ejs %>
</body>
</html>
